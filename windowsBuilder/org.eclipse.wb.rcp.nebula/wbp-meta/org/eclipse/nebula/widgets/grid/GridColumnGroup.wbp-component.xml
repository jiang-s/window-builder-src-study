<?xml version="1.0" encoding="UTF-8"?>
<component xmlns="http://www.eclipse.org/wb/WBPComponent">
	<model class="org.eclipse.wb.internal.rcp.nebula.grid.GridColumnGroupInfo"/>
	<description>Instances of this class represent a column group in a grid widget.</description>
	<!-- CREATION -->
	<creation>
		<source><![CDATA[new org.eclipse.nebula.widgets.grid.GridColumnGroup(%parent%, org.eclipse.swt.SWT.NONE)]]></source>
		<invocation signature="setText(java.lang.String)"><![CDATA["New Group"]]></invocation>
	</creation>
	<!-- CONSTRUCTORS -->
	<constructors>
		<constructor>
			<parameter type="org.eclipse.nebula.widgets.grid.Grid" parent="true"/>
			<parameter type="int" defaultSource="org.eclipse.swt.SWT.NONE">
				<editor id="style">
					<parameter name="class">org.eclipse.swt.SWT</parameter>
					<parameter name="set">TOGGLE</parameter>
				</editor>
			</parameter>
		</constructor>
	</constructors>
	<!-- EXPOSING RULES -->
	<exposing-rules>
		<exclude package="org.eclipse.nebula.widgets.grid"/>
	</exposing-rules>
	<!-- PARAMETERS -->
	<parameters>
		<!-- flip expanded -->
		<parameter name="double-click.flipBooleanProperty">expanded</parameter>
		<!-- flow container -->
		<parameter name="flowContainer">true</parameter>
		<parameter name="flowContainer.horizontal">true</parameter>
		<parameter name="flowContainer.component">org.eclipse.nebula.widgets.grid.GridColumn</parameter>
	</parameters>
</component>

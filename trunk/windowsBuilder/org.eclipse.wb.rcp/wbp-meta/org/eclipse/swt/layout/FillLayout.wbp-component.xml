	<!-- CREATION -->
	<creation>
		<source><![CDATA[new org.eclipse.swt.layout.FillLayout(org.eclipse.swt.SWT.HORIZONTAL)]]></source>
	</creation>
	<!-- CONSTRUCTORS -->
	<constructors>
		<constructor>
			<parameter type="int" property="type"/>
		</constructor>
	</constructors>
	<!-- PROPERTIES -->
	<property id="type">
		<editor id="staticField">
			<parameter name="class">org.eclipse.swt.SWT</parameter>
			<parameter name="fields">HORIZONTAL VERTICAL</parameter>
		</editor>
	</property>
	<!-- PARAMETERS -->
	<parameters>
		<!-- flow container -->
		<parameter name="flowContainer">true</parameter>
		<parameter name="flowContainer.horizontal">isHorizontal()</parameter>
	</parameters>
</component>

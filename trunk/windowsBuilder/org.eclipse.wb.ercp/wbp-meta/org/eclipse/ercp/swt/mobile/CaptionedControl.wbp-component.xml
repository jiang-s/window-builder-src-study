<?xml version="1.0" encoding="UTF-8"?>
<component xmlns="http://www.eclipse.org/wb/WBPComponent">
	<model class="org.eclipse.wb.internal.ercp.model.widgets.mobile.CaptionedControlInfo"/>
	<description>A CaptionedControl is used to display a label (caption) in front of a control. An optional
		trailing text can be used after the control, for example, to indicate units of measurement.</description>
	<!-- CREATION -->
	<creation>
		<source><![CDATA[new org.eclipse.ercp.swt.mobile.CaptionedControl(%parent%, org.eclipse.swt.SWT.NONE)]]></source>
		<invocation signature="setText(java.lang.String)"><![CDATA["New CaptionedControl"]]></invocation>
	</creation>
	<!-- CONSTRUCTORS -->
	<constructors>
		<constructor>
			<parameter type="org.eclipse.swt.widgets.Composite" parent="true"/>
			<parameter type="int" defaultSource="org.eclipse.swt.SWT.NONE">
				<editor id="style">
					<parameter name="class">org.eclipse.swt.SWT</parameter>
					<parameter name="select0">orientation LEFT_TO_RIGHT LEFT_TO_RIGHT RIGHT_TO_LEFT</parameter>
				</editor>
			</parameter>
		</constructor>
	</constructors>
	<!-- PROPERTIES -->
	<properties-preferred names="text trailingText image"/>
	<property-tag name="text" tag="isText" value="true"/>
	<!-- PARAMETERS -->
	<parameters>
		<parameter name="layout.has">false</parameter>
	</parameters>
</component>

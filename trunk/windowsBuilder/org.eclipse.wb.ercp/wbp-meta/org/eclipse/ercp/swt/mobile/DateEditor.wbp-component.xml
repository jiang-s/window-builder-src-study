<?xml version="1.0" encoding="UTF-8"?>
<component xmlns="http://www.eclipse.org/wb/WBPComponent">
	<description>A special data entry control that allows users to enter or choose a date. The return value of
		getDate() is an instance of a Date class.</description>
	<!-- CREATION -->
	<creation>
		<source><![CDATA[new org.eclipse.ercp.swt.mobile.DateEditor(%parent%, org.eclipse.swt.SWT.BORDER, org.eclipse.ercp.swt.mobile.DateEditor.DATE_TIME)]]></source>
	</creation>
	<!-- CONSTRUCTORS -->
	<constructors>
		<constructor>
			<parameter type="org.eclipse.swt.widgets.Composite" parent="true"/>
			<parameter type="int" defaultSource="org.eclipse.swt.SWT.NONE">
				<editor id="style">
					<parameter name="class">org.eclipse.swt.SWT</parameter>
					<parameter name="set">BORDER</parameter>
				</editor>
			</parameter>
		</constructor>
		<constructor>
			<parameter type="org.eclipse.swt.widgets.Composite" parent="true"/>
			<parameter type="int" defaultSource="org.eclipse.swt.SWT.NONE">
				<editor id="style">
					<parameter name="class">org.eclipse.swt.SWT</parameter>
					<parameter name="set">BORDER</parameter>
				</editor>
			</parameter>
			<parameter type="int">
				<editor id="style">
					<parameter name="title">DateStyle</parameter>
					<parameter name="class">org.eclipse.ercp.swt.mobile.DateEditor</parameter>
					<parameter name="set">COMPACT FULL</parameter>
					<parameter name="enum0">style 0xF DATE TIME DATE_TIME DURATION OFFSET</parameter>
				</editor>
			</parameter>
		</constructor>
	</constructors>
	<!-- PROPERTIES -->
	<properties-advanced names="date time timeZone"/>
	<!-- PARAMETERS -->
	<parameters>
		<parameter name="gridLayout.grabHorizontal">true</parameter>
		<parameter name="gridLayout.rightAlignment.isTarget">true</parameter>
	</parameters>
</component>
